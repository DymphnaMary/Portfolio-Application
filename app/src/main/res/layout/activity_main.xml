<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />
    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="8dp"
        android:text="Portfolio"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/name"
        android:layout_width="187dp"
        android:layout_height="26dp"
        android:layout_below="@id/image"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="8dp"
        android:text="@string/Nameofstd"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-2dp"
        android:text="Student"
        android:textColor="#1AB2B6"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
    android:id="@+id/edu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="EDUCATION"
    android:layout_below="@id/desg"
    android:textColor="@color/black"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    />

<TextView
    android:id="@+id/colname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/edu"
    android:text="@string/College"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:textStyle="italic"
    android:textSize="20dp"
    android:textColor="#FF1AB2B6"
    />

<TextView
    android:id="@+id/branch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Information Technology"
    android:layout_below="@id/colname"
    android:textStyle="italic"
    android:textSize="20dp"
    android:textColor="#FF1AB2B6"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    />

<TextView
    android:id="@+id/sessionyears"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2019-2023"
    android:textStyle="italic"
    android:textSize="20dp"
    android:textColor="#FF1AB2B6"
    android:layout_below="@id/colname"
    android:layout_marginTop="10dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="15dp"
    />
<TextView
    android:id="@+id/course"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="COURSES"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:textSize="20dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_below="@id/branch"
    />

    <TextView
        android:id="@+id/org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Android Development"
        android:textColor="#FF1AB2B6"
        android:textSize="20dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/year1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#FF1AB2B6"
        android:layout_below="@id/course"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/coursename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/org"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Web development"
        android:textColor="#FF1AB2B6"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
    android:id="@+id/year"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2020"
    android:textStyle="italic"
    android:textSize="20dp"
    android:textColor="#FF1AB2B6"
    android:layout_below="@id/org"
    android:layout_marginTop="10dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="15dp"
    />

    <Button
        android:id="@+id/opengithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="#4B9DDD"
        android:padding="15dp"
        android:text="OPEN Github"
        android:textSize="20dp" />

    <Button
        android:id="@+id/openlinkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="8dp"
        android:background="#4B9DDD"
        android:padding="15dp"
        android:text="OPEN Linkedin"
        android:textSize="20dp" />

</RelativeLayout>

